{% set isIframe = app.session.get('iframe') %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>vientosur.net | {{ 'index.hotel' |trans }} - {{ 'index.reservation' | trans }}</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <style type="text/css">
        .header-top {
            padding: 5px 0;
            background: #404040;
        }
        .logo {
            display: block;
        }
        a {
            color: #337ab7;
            text-decoration: none;
        }
        header#main-header {
            border-bottom: 2px solid #ed8323;
        }
        .header-top {
            padding: 5px 0;
            background: #404040;
        }
        #map {
            height: 428px;
            width: 493px;
        }
        #main_picture > img{
            width:100%;
        }
    </style>

    <script src="http://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://use.fontawesome.com/3b7bfd9c44.js"></script>
</head>
<body>
<header id="main-header">
    <div class="" style="height: 100px;">
        <div class="" style="padding: 0 15px; line-height: 0; height: 100px">
            {% if isIframe != true %}
            <div class="col-md-3">
                <a class="logo" href="#">
                    <img src="https://www.vientosur.net/bundles/vientosurappapp/images/vientosur-logo-color.png" alt="Viento Sur" title="">
                </a>
            </div>
            {% endif %}
            <div class="col-md-9" style="position: relative; {% if isIframe != true %} top: -40px; {% endif %}">
              <p style="color:#000; text-align: right; padding-top:15px;">{{ 'hotels.reservation_number' | trans }}:
                  <span style="font-weight: bold;color: #008cd1;font-size: 17px;">{{ reservation.id }}</span>
              </p>
              <p>&nbsp;</p>
              <p style="color:#000; text-align: right;">
                  Código de ingreso:
                  <span style="font-weight: bold;color: #008cd1;font-size: 17px;">{{ reservation.collectionId }}</span>
              </p>
            </div>
        </div>
    </div>
</header>
{% set symbol = '' %}
{% set targetCurrency = app.session.get('targetCurrency') %}
{% if targetCurrency == 'USD' %}
    {% set symbol = 'US$' %}
{% elseif targetCurrency == 'ARS' %}
    {% set symbol = 'AR$' %}
{% else %}
    {% set symbol = 'AR$' %}
{% endif %}
{% set decimal =false %}
{% set price_detail = app.session.get('price_detail') %}
{% set booking_all_data = app.session.get('booking_all_data') %}
{% set destination = app.session.get('destination') %}

<h6>{{ 'hotels.thanks_booking' | trans({'%name%': reservation.holderName}) }}</h6>
<div class="container bs-docs-container" style="font-size: 11px">
    <table class="table" style="margin-bottom:0px;">
        <tr>
            <th colspan="2">
                <table class="table">
                    <tr>
                        <td>
                            <div id="main_picture" style="width: 200px; height: 156px;">
                                <img style="width: 200px; height: 156px; margin: auto;display: block;" src="{{ base_path }}" class="origin" />
                            </div>
                        </td>
                        <td>
                            <div id="main_picture_map" style="width: 200px; height: 156px;">
                                <img src="https://www.mapquestapi.com/staticmap/v4/getplacemap?key=vcdIMmp9OiCGm1lsGE4Z1QRz5AVABDyG&location={{latitude}},{{longitude}}&size=500,300&zoom=9&showicon=red_1-1" alt="" style="width: 200px; height: 156px; margin: auto;display: block;">
                            </div> 
                            {#<div id="map"></div>#}
                        </td>
                    </tr>
                    <tr>
                        <th colspan="2">
                            <h4>{{ item.name }}</h4>
                        </th>
                    </tr>
                    <tr>
                        <th>
                            {{ 'hotels.gps_coordinates' | trans }}
                        </th>
                        <td>
                            Lat {{ latitude }}, Long {{ longitude }}
                        </td>
                    </tr>
                    <tr>
                        <th width="30%">
                            {{ 'hotels.address' | trans }}:
                        </th>
                        <td>
                            {{ address_map }}
                        </td>
                    </tr>
                </table>
                <table class="table table-bordered">
                    <tr>
                        <td width="30%" style="text-align: center">
                            <h2>{{ checking_date |localizeddate('medium', 'none', app.request.locale) }}</h2>
                            <h4 style="margin: 0; padding: 0;">
                                <span>
                                    {% if schedule == 'am' %}
                                        <b>{{ "activity.turn" | trans }}: AM - pick up: {{ item.pickUpAm }} - {{ "admin.from_the" | trans }} {{ item.fromAm}} {{ "admin.until" | trans }} {{ item.toAm}}</b>
                                    {% elseif schedule == 'pm' %}
                                        <b>{{ "activity.turn" | trans }}: PM - pick up: {{ item.pickUpPm }} - {{ "admin.from_the" | trans }} {{ item.fromPm}} {{ "admin.until" | trans }} {{ item.toPm}}</b>    
                                    {% elseif schedule == 'all_day'  %}  
                                        <b>{{ "activity.turn" | trans }}: pick up: {{ item.pickUpAll }} - {{ "admin.from_the" | trans }} {{ item.fromAll }} {{ "admin.until" | trans }} {{ item.toAll}}</b>    
                                    {% elseif schedule == 'several_day'  %} 
                                        <b>{{ "activity.turn" | trans }}: pick up: {{ item.pickUpAll }} - {{ "admin.from_the" | trans }} {{ item.fromSeveral }} {{ "admin.until" | trans }} {{ item.toSeveral}}</b>    
                                    {% endif %}
                                        - <b>{{ "flights.duration" | trans }}:</b> {{ item.duration }} hs
                                </span>
                            </h4>
                        </td>
                        <td width="30%">
                            <div class="col-md-12" style="text-align: center">
                                <h7 style="display: block;">{{ 'hotels.your_group' | trans }}</h7>
                                {% if cant_adut > 0 %}
                                <div class="col-md-{% if cant_chil > 0 %}6{% else %}12{% endif %}">
                                    <h5>{{ cant_adut }} {{ 'index.search.hotel.adult' | trans }}(s)</h5>
                                </div>
                                {% endif %}
                                {% if cant_chil > 0 %}
                                    <div class="col-md-{% if cant_adut > 0 %}6{% else %}12{% endif %}">
                                        <h5>{{ cant_chil }} {{ 'index.search.hotel.child' | trans }}(s)</h5>
                                    </div>
                                {% endif %}
                            </div>
                        </td>  
                        <td width="30%" style="text-align: center">
                            {{ 'hotels.total_price' | trans }}:<br>
                            <h2>{{ symbol }} {{ render(controller('VientoSurAppAppBundle:Activity:getConvertCurrency',{ 'amount':  price, 'symbol': symbol})) }}</h2>
                            {% if reservation.percentagePaidEnabled%}
                                - {{ 'activity.payment_on_arrival' | trans }} -<br/>
                                {{ 'activity.percentage_paid_in_web' | trans }}: {{ symbol }} {{ render(controller('VientoSurAppAppBundle:Activity:getConvertCurrency',{ 'amount':  reservation.percentagePaid, 'symbol': symbol})) }}<br/>
                                {{ 'activity.rest_payment' | trans }}: {{ symbol }} {{ render(controller('VientoSurAppAppBundle:Activity:getConvertCurrency',{ 'amount':  reservation.restOfPay, 'symbol': symbol})) }}<br/>
                            {% endif %}  
                        </td>    
                    </tr>
                </table>
                <table class="table table-bordered">
                    <tr style="text-align: center;">
                        <td width="50%">
                            <h2 style="font-size: 12px">{{ 'hotels.reservation_by' | trans }}:</h2>
                            <h4 style="font-size: 12px">{{ reservation.holderName }}</h4>
                            <h4 style="font-size: 12px">Email: {{ reservation.email }}</h4>
                            <h4 style="font-size: 12px">{{ 'hotels.labels.number' | trans }} {{ reservation.phoneNumber }}</h4>
                        </td>
                        <td width="40%">
                            <h2 style=";font-size: 12px">{{ 'hotels.pay' | trans }}</h2>
                            <h5 style="font-size: 12px">
                                {{ 'hotels.payment_method_chosen' | trans }}:<br/>
                                {% if reservation.percentagePaidEnabled%}
                                    - {{ 'activity.payment_on_arrival' | trans }} -<br/>
                                    {{ 'activity.percentage_paid_in_web' | trans }}: {{ symbol }} {{ render(controller('VientoSurAppAppBundle:Activity:getConvertCurrency',{ 'amount':  reservation.percentagePaid, 'symbol': symbol})) }}<br/>
                                    {{ 'activity.rest_payment' | trans }}: {{ symbol }} {{ render(controller('VientoSurAppAppBundle:Activity:getConvertCurrency',{ 'amount':  reservation.restOfPay, 'symbol': symbol})) }}<br/>
                                {% endif %}    
                                MercadoPago.com - referencia de pago Nº: {{ reservation.collectionId }}
                            </h5>
                        </td>
                    </tr>
                </table>         
            </th>
        </tr>
    </table> 
    <div class="hr" style="height:1px;border-bottom:1px solid #cccccc;clear: both;">&nbsp;</div>
    <i class="fa fa-clock-o"></i> <em><small style="font-size: 8px">{{ 'index.hotel_footer' | trans }}</small></em>
    <br>
    <em><small style="font-size: 8px">{{ 'index.hotel_footer2' | trans }}</small></em>
    <br>
    <em style="font-size: 8px;"><small>{{ 'index.footer_copy.responsible' | trans }} <span>Viento Sur</span> {{ 'index.footer_copy.tour' | trans }}</small></em>                        
</div>    
</body>
</html>            
