<body style="margin:0; padding:0;" bgcolor="#F0F0F0" leftmargin="0" topmargin="0" marginwidth="0" marginheight="0">
{% set targetCurrency = app.session.get('targetCurrency') %}
{% if targetCurrency == 'USD' %}
    {% set symbol = 'US$' %}
{% else %}
    {% set symbol = 'AR$' %}
{% endif %}
{% set decimal =false %}
{% set price_detail = app.session.get('price_detail') %}
{% set booking_all_data = app.session.get('booking_all_data') %}
{% set destination = app.session.get('destination') %}
<table border="0" width="100%" height="100%" cellpadding="0" cellspacing="0" bgcolor="#F0F0F0">
    <tr>
        <td align="center" valign="top" bgcolor="#F0F0F0" style="background-color: #F0F0F0;">
            <!-- 600px container (white background) -->
            <table border="0" width="900" cellpadding="0" cellspacing="0" class="container" style="width:900px;max-width:900px">
                <tr>
                    <td class="container-padding header" align="left" style="font-family:Helvetica, Arial, sans-serif;font-size:24px;font-weight:bold;padding-bottom:12px;color:#DF4726;padding-left:24px;padding-right:24px">
                    </td>
                </tr>
                <tr>
                    <td class="container-padding content" align="left" style="padding-left:24px;padding-right:24px;padding-top:0px;padding-bottom:12px;background-color:#ffffff">
                        <!--<div class="title" style="font-family:Helvetica, Arial, sans-serif;font-size:18px;font-weight:600;color:#374550">Two Columns (simple)</div>-->
                        <div class="body-text" style="background-color:#404040; font-family:Helvetica, Arial, sans-serif;font-size:14px;line-height:20px;text-align:left;color:#fff; padding: 20px;">
                            <div style="width: 48%;text-align: left;display: inline-block;">
                                <img src="https://ci3.googleusercontent.com/proxy/s3JvLhRMc-a9q5LWK1rgVD76d-316J2qJrYuGYO8Wy5PcEhLr_u0ItxJO31m26ftgohZAtJ-KbokV7zGW683XjqbpJ8Wi5xGBH-5EonOFySIEx1J6uUwMSvyoitq7wdkeQfG1-3i=s0-d-e1-ft#http://www.vientosur.net/bundles/vientosurappapp/images/vientosur-logo-color.png" alt="">
                            </div>
                            <div style="width: 48%;text-align: right;display: inline-block;">
                                <p style="display: inline-block;margin: 0;">{{ 'hotels.reservation_number' | trans }}:</p>
                                <h4 style="display: inline-block;margin: 0;">{{ reservation.id }}</h4><br><br>
                                {% if app.session.get('hotel_entrance_code') is not null %}
                                <p style="display: inline-block;margin: 0;margin-top: 2px;">{{ 'hotels.code_hotel_entrance' | trans }}:</p>
                                <h4 style="display: inline-block;margin: 0;">{{ reservation.collectionId }}</h4>
                                {% endif %}
                            </div>
                        </div>
                        <br><br>
                        <div class="title" style="font-family:Helvetica, Arial, sans-serif;font-size:18px;font-weight:600;color:#374550">
                            {{ 'hotels.thanks_booking' | trans({'%name%': reservation.holderName}) }}
                        </div>

                        <div class="hr" style="height:1px;border-bottom:1px solid #cccccc">&nbsp;</div>
                        <br>
                        <table border="0" cellpadding="0" cellspacing="0" width="100%">
                            <tr>
                                <td width="50%" valign="top">
                                    <table width="900" border="0" cellpadding="0" cellspacing="0" align="left" class="force-row">
                                        <tr>
                                            <td class="col" valign="top" style="font-family:Helvetica, Arial, sans-serif;font-size:14px;line-height:20px;text-align:left;color:#333333;width:100%">
                                                <div style="width: 49%;display: inline-block;">
                                                    <img style="width: 433px; height: 278px;" src="{{ render(controller('VientoSurAppAppBundle:Activity:getPictureByActivity',{ 'id':  item.id})) }}" alt="Viento Sur" title="">
                                                </div>
                                                <div style="width: 49%;display: inline-block;">
                                                    <img style="width: 433px; height: 278px;" src="https://www.mapquestapi.com/staticmap/v4/getplacemap?key=vcdIMmp9OiCGm1lsGE4Z1QRz5AVABDyG&location={{latitude}},{{longitude}}&size=500,300&zoom=9&showicon=red_1-1" alt="">
                                                </div>
                                            </td>
                                        </tr>
                                    </table>
                                <br>
                                <br>
                                </td>
                            </tr>
                        </table>    
                    
            <table border="0" width="900" cellpadding="0" cellspacing="0" class="container" style="width:900px;max-width:900px">
                <tbody>
                    <tr>
                        <td class="container-padding header" align="left" style="font-family:Helvetica, Arial, sans-serif;font-size:24px;font-weight:bold;color:#003580;">
                            <br>
                            <div class="hr" style="height:1px;border-bottom:1px solid #cccccc">&nbsp;</div>
                            {{ item.name }}
                            <br/>
                        </td>
                    </tr>
                    <tr>
                        <td class="container-padding header" align="left" style="font-family:Helvetica, Arial, sans-serif;">
                            <div class="hr" style="height:1px;border-bottom:1px solid #cccccc">&nbsp;</div>
                            <br>
                            <strong>{{ 'hotels.phone' | trans }}:</strong> {{ activity_phone }}
                        </td>
                    </tr>
                    <tr>
                        <td class="container-padding header" align="left" style="font-family:Helvetica, Arial, sans-serif;">
                            <br>
                            <div class="hr" style="height:1px;border-bottom:1px solid #cccccc">&nbsp;</div>
                            <br>
                            <strong>{{ 'hotels.gps_coordinates' | trans }}:</strong> Lat {{ latitude }}, Long {{ longitude }}
                        </td>
                    </tr>
                    <tr>
                        <td class="container-padding header" align="left" style="font-family:Helvetica, Arial, sans-serif;">
                            <br>
                            <div class="hr" style="height:1px;border-bottom:1px solid #cccccc">&nbsp;</div>
                            <br>
                            <strong>{{ 'hotels.address' | trans }}:</strong> {{ address_map }}
                        </td>
                    </tr>
                    <tr>
                        <td class="container-padding header" align="left" style="font-family:Helvetica, Arial, sans-serif;">
                            <br>
                            <div class="hr" style="height:1px;border-bottom:1px solid #cccccc">&nbsp;</div>
                            <br>
                            <strong>Titular de Actividad:</strong>

                            <ul>
                                <li>{{ 'hotels.labels.name' | trans }} {{ reservation.holderName }}</li>
                                <li>{{ 'hotels.labels.document' | trans }} {{ reservation.documentNumber }}</li>
                                <li>Email: {{ reservation.email }}</li>
                                <li>{{ 'hotels.labels.number' | trans }} {{ reservation.phoneNumber }}</li>
                            </ul>
                        </td>
                    </tr> 
                    <tr>
                        <td>
                            <br>
                            <div class="hr" style=" width: 880px;height:1px;border-bottom:1px solid #cccccc;clear: both;">&nbsp;</div>                
                            <table width="400" border="0" cellpadding="0" cellspacing="0" align="left" class="force-row" style="margin-right: 10px;border-right: #eee 1px solid;border-left: #eee 1px solid;height:150px;">
                                <tr>
                                    <td class="col" valign="top" style="font-family:Helvetica, Arial, sans-serif;font-size:14px;line-height:20px;text-align:center;color:#333333;width:100%">
                                        <br>
                                        {{ 'index.search.hotel.checkin_date' | trans }}
                                        <h3>{{ checking_date |localizeddate('medium', 'none', app.request.locale) }}</h3>
                                        <h4 style="margin: 0; padding: 0;">
                                            <span>
                                                {% if schedule == 'am' %}
                                                    <b>Turno: AM - pick up: {{ item.pickUpAm }} - desde las {{ item.fromAm}} hasta las {{ item.toAm}}</b>
                                                {% elseif schedule == 'pm' %}
                                                    <b>Turno: PM - pick up: {{ item.pickUpPm }} - desde las {{ item.fromPm}} hasta las {{ item.toPm}}</b>    
                                                {% else %}  
                                                    <b>Turno: pick up: {{ item.pickUpAll }} - desde las {{ item.fromAll }} hasta las {{ item.toAll}}</b>    
                                                {% endif %}
                                                    - <b>Duración:</b> {{ item.duration }} hs
                                            </span>
                                        </h4>
                                    </td>
                                </tr>
                            </table>
                            <table width="200" border="0" cellpadding="0" cellspacing="0" align="left" class="force-row" style="margin-right: 10px;border-right: #eee 1px solid;height:150px;">
                                <tr>
                                    <td class="col" valign="top" style="font-family:Helvetica, Arial, sans-serif;font-size:14px;line-height:20px;text-align:center;color:#333333;width:100%">
                                        <br>
                                        <div class="col-md-12">
                                            <h7 style="display: block;">{{ 'hotels.your_group' | trans }}</h7>
                                            {% if cant_adut > 0 %}
                                            <div class="col-md-{% if cant_chil > 0 %}6{% else %}12{% endif %}">
                                                <h5>{{ cant_adut }} {{ 'index.search.hotel.adult' | trans }}(s)</h5>
                                            </div>
                                            {% endif %}
                                            {% if cant_chil > 0 %}
                                                <div class="col-md-{% if cant_adut > 0 %}6{% else %}12{% endif %}">
                                                    <h5>{{ cant_chil }} {{ 'index.search.hotel.child' | trans }}(s)</h5>
                                                </div>
                                            {% endif %}
                                        </div>
                                    </td>
                                </tr>
                            </table>
                            <table width="260" border="0" cellpadding="0" cellspacing="0" align="left" class="force-row" style="height:150px;border-right: #eee 1px solid;">
                                <tr>
                                    <td class="col" valign="top" style="font-family:Helvetica, Arial, sans-serif;font-size:14px;line-height:20px;text-align:center;color:#333333;width:100%">
                                        <br>
                                        {{ 'hotels.total_price' | trans }}:<br>
                                        <h2>{{ symbol }} {{ render(controller('VientoSurAppAppBundle:Activity:getConvertCurrency',{ 'amount':  price, 'symbol': symbol})) }}</h2>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr> 
                    <tr>
                        <td>
                            <div class="hr" style=" width: 880px;height:1px;border-bottom:1px solid #cccccc;clear: both;">&nbsp;</div> 
                            <table width="500" border="0" cellpadding="0" cellspacing="0" align="left" class="force-row" style="margin-right: 10px;border-right: #eee 1px solid;border-left: #eee 1px solid;height:150px;">
                                <tr>
                                    <td class="col" valign="top" style="font-family:Helvetica, Arial, sans-serif;font-size:14px;line-height:20px;text-align:center;color:#333333;width:100%;height:180px;">
                                        <br>
                                        <h2 style=";font-size: 12px">{{ 'hotels.pay' | trans }}</h2>
                                        <h5 style="font-size: 12px">
                                            {{ 'hotels.payment_method_chosen' | trans }}:<br/>
                                            MercadoPago.com - referencia de pago Nº: {{ reservation.collectionId }}
                                        </h5>
                                        <br>
                                    </td>
                                </tr>
                            </table>
                            <table width="370" border="0" cellpadding="0" cellspacing="0" align="left" class="force-row" style="margin-right: 10px;border-right: #eee 1px solid;height:150px;">
                                <tr>
                                    <td class="col" valign="top" style="font-family:Helvetica, Arial, sans-serif;font-size:14px;line-height:20px;text-align:center;color:#333333;width:100%">
                                        <br>
                                        <h2 style=";font-size: 12px">{{ 'hotels.cancellation_policies' | trans }}</h2>
                                        <h5 style="font-size: 12px">
                                            Puede cancelar hasta 24 hs antes<br/><br/>
                                            <a style="color:#ffffff;border:0;display: inline-block;padding: 14px 25px;opacity: 0.9;background-color: red;text-align: center;text-decoration: none;font-size: 16px;margin-left: 20px;" class="btn btn-danger" href="{# { url('viento_sur_app_booking_hotel_pdf', {'status': 'ok','detail': detail, 'hotel_id': hotelId, 'email': internal.email, 'id': internal.id}) }#}">
                                                Cancelar Reserva
                                            </a>
                                        </h5>
                                    </td>
                                </tr>
                            </table> 
                            <br>
                            <div class="hr" style=" width: 880px;height:1px;border-bottom:1px solid #cccccc;clear: both;">&nbsp;</div> 
                            <br><br><br>
                            <div style="width: 100%; display: inline-block; text-align: center;">
                                <a style="color:#ffffff;border:0;display: inline-block;padding: 14px 25px;opacity: 0.9;background-color: #008cd1;text-align: center;text-decoration: none;font-size: 16px;margin-left: 20px;" class="btn btn-default" href="{#{ url('viento_sur_app_booking_hotel_pdf', {'status': 'ok','detail': detail, 'hotel_id': hotelId, 'email': internal.email, 'id': internal.id}) }#}">
                                    {{ 'hotels.download_pdf' | trans }}
                                </a>
                            </div>                    
                        </td>    
                    </tr>     
                </tbody>    
            </table>                    
        </td>    
    </tr>
</table> 
<div class="hr" style="height:1px;border-bottom:1px solid #cccccc;clear: both;">&nbsp;</div>
<br>
<i class="fa fa-clock-o"></i> <em><small>{{ 'index.hotel_footer' | trans }}</small></em>
<br>
<em><small>{{ 'index.hotel_footer2' | trans }}</small></em>
<br/>
<em><small>{{ 'index.footer_copy.responsible' | trans }} <span>Viento Sur</span> {{ 'index.footer_copy.tour' | trans }}</small></em>                               
</td>
                </tr>    
            </table>  
<script>
            $(document).ready(function(){
                var str = $('#info').text();
                $("#info").html( str.replace(/\n/g, "<br />"));
            })
        </script>
</body>
