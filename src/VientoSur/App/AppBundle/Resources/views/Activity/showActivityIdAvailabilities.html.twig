    <script>
        window.twttr = (function(d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0],
                    t = window.twttr || {};
            if (d.getElementById(id)) return t;
            js = d.createElement(s);
            js.id = id;
            js.src = "https://platform.twitter.com/widgets.js";
            fjs.parentNode.insertBefore(js, fjs);

            t._e = [];
            t.ready = function(f) {
                t._e.push(f);
            };
            console.log('twitter load');
            return t;
        }(document, "script", "twitter-wjs"));
    </script>
    <script type="text/javascript"> 
        $("#animarscroll").on("click", function(){
            var posicion = $(".listRooms").offset().top;
            $("html, body").animate({
                scrollTop: posicion
            }, 1500);
        });

        $(document).ready(function () {
            var str = $('#info').text();
            var currency = {{ item.price }};
            var multiplo_true = 0;
            var total_amount  = 0;
            
            $("#info").html( str.replace(/\n/g, "<br />"));
            
            $('#datetimepicker11').datepicker({
                daysOfWeekDisabled: '{{ array_week_disabled }}',
                format: "dd/mm/yyyy",
                datesDisabled: {{ text_date_disabled | raw }}
            });
            
            $('#can-adul').change(function(){
                var value_option = $("#can-adul option:selected").val();
                var total_chil   = {{ item.capacityForShift }} - value_option;
                
                var select_chil = $('#can-chil');
                var value_chil  = select_chil.val();
                $('option', select_chil).remove();
                
                for ( var i = 0, l = total_chil; i <= l; i++ ) {
                    select_chil.append(new Option(i, i, true, true));;
                } 
                select_chil.val(value_chil);
                
                total_amount = (parseFloat(currency) * (parseInt(value_option) + parseInt(value_chil)));
                $("#currency").text(total_amount);
                $("#price").val(total_amount);
                
            });
            
            $('#can-chil').change(function(){
                var value_option = $("#can-chil option:selected").val();
                var total_adul   = {{ item.capacityForShift }} - value_option;
                
                var select_adul = $('#can-adul');
                var value_adul  = select_adul.val();
                $('option', select_adul).remove();
                
                for ( var i = 0, l = total_adul; i <= l; i++ ) {
                    select_adul.append(new Option(i, i, true, true));;
                } 
                select_adul.val(value_adul);
                
                total_amount = (parseFloat(currency) * (parseInt(value_option) + parseInt(value_adul)));
                $("#currency").text(total_amount);
                $("#price").val(total_amount);
                
            });
            
            $('#schedule_select').change(function(){
                var value_option = $("#schedule_select option:selected").val();
                
                if(value_option === 'AM'){
                    $('#schedulePM').hide();
                    $('#scheduleAM').show();
                    $('#schedule').val('am');
                }else{
                    $('#scheduleAM').hide();
                    $('#schedulePM').show();
                    $('#schedule').val('pm');
                }    
                
            });
            
            $('a[href="#google-map-tab"]').on('shown.bs.tab', function(e) {
                
                var latLng = {lat: {{ latitude }}, lng: {{ longitude }} };
                var hotelName = '{{item.name}}';
                
                L.mapquest.key = 'vcdIMmp9OiCGm1lsGE4Z1QRz5AVABDyG';
                
                // 'map' refers to a <div> element with the ID map
                var map = L.mapquest.map('google-map-tab', {
                  center: latLng,
                  layers: L.mapquest.tileLayer('map'),
                  zoom: 12
                });
                
                L.mapquest.textMarker(latLng, {
                    text: hotelName,
                    position: 'right',
                    type: 'marker',
                    icon: {
                      primaryColor: '#333333',
                      secondaryColor: '#333333',
                      size: 'sm'
                    }
                  }).addTo(map);
            });
            
        });
    </script>
