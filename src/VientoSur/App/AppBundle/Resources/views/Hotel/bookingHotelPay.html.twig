                var cuit = $(this).val();
                if (cuit.match(/^\d{2}\-\d{8}\-\d{1}$/)){
                    console.log('cuit valido')
                    $("#errorCuit").hide();
                }else{
                    console.log('cuit not valido')
                    $("#errorCuit").show();
                }
            });
            $("#form_payment_fiscal_document").mask("99-99999999-9");

            $("#form_payment_fiscal_document").on("blur", function() {
                var last = $(this).val().substr( $(this).val().indexOf("-") + 1 );

                if( last.length == 3 ) {
                    var move = $(this).val().substr( $(this).val().indexOf("-") - 1, 1 );
                    var lastfour = move + last;

                    var first = $(this).val().substr( 0, 9 );

                    $(this).val( first + '-' + lastfour );
                }
            });

            device();

            {% if cardSelected is defined %}
            $('.clickable-card[data-all-data-card="{{ cardSelected }}"]').click();
            {% endif %}
