                                                <h5>{{ 'index.search.hotel.room' | trans }} {{ loop.index }}: {{ temp.name }}</h5>
                                                <div class="row">
                                                    <div class="col-sm-4">
                                                        <div class="form-group">
                                                            {% set fieldName = 'first_name' ~ loop.index0 %}
                                                            {% set label = 'hotels.labels.name' | trans %}
                                                            {% set placeholder = 'hotels.labels.name_placeholder' | trans %}
                                                            {{ form_row(attribute(formNewPay.passengers, fieldName), {'label': label, 'label_attr': {'class': 'label-lef'}, 'attr': {'placeholder': placeholder, 'class': 'form-control input-width'}}) }}
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-4">
                                                        <div class="form-group">
                                                            {% set fieldName = 'last_name' ~ loop.index0 %}
                                                            {% set label = 'hotels.labels.lastname' | trans %}
                                                            {% set placeholder = 'hotels.labels.name_placeholder' | trans %}
                                                            {{ form_row(attribute(formNewPay.passengers, fieldName), {'label': label, 'label_attr': {'class': 'label-lef'}, 'attr': {'placeholder': placeholder, 'class': 'form-control input-width'}}) }}
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-4">
                                                        <div class="form-group">
                                                            {% set fieldName = 'document_number' ~ loop.index0 %}
                                                            {% set label = 'hotels.labels.document' | trans %}
                                                            {{ form_row(attribute(formNewPay.passengers, fieldName), {'label': label, 'label_attr': {'class': 'label-lef'}, 'attr': {'class': 'form-control input-width-50'}}) }}
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            {% set fieldName = 'room_reference' ~ loop.index0 %}
                                            {{ form_widget(attribute(formNewPay.passengers, fieldName), { 'attr': {'class': 'hidden'} }) }}
                                        {% endfor %}


                                        {{ form_widget(formNewPay.passengers.idspecial_requests, { 'attr': {'class': 'hidden'} }) }}
                                        {{ form_widget(formNewPay.passengers.paramsspecial_requests, { 'attr': {'class': 'hidden'} }) }}
                                    </div>
                                </div>
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h4 class="panel-title">{{ 'hotels.payment_methods' | trans }}</h4>
                                    </div>
                                    <div id="collapse" class="panel-collapse">
                                        <div class="panel-body">
                                            {% include 'VientoSurAppAppBundle:Hotel:listPaymentMethods.html.twig' %}
                                        </div>
                                    </div>
                                </div>
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h4 class="panel-title">{{ 'hotels.contact_info' | trans }}</h4>
                                    </div>
                                    <div id="collapse" class="panel-collapse">
                                        <div class="panel-body">
                                            <div class="row">
                                                {% for phone in formChoice.contact.phones %}
                                                <div class="col-sm-2">
                                                    <div class="form-group">
                                                        {% set fieldName = 'country_code' ~ loop.index0 %}
                                                        {% set label = 'hotels.labels.country' | trans %}
                                                        <label class="label-lef" for="">{{ label }}</label>
                                                        {{ form_widget(attribute(formNewPay.contact, fieldName), {'attr': {'style': 'margin-top:5px !important;', 'class': 'form-control'}}) }}
                                                    </div>
                                                </div>
                                                <div class="col-sm-3">
                                                    <div class="form-group">
                                                        {% set fieldName = 'type' ~ loop.index0 %}
                                                        {% if attribute(formNewPay.contact, fieldName) is defined %}
                                                            {% set label = 'hotels.labels.type' | trans %}
                                                            <label class="label-lef" for="">{{ label }}</label>
                                                            {{ form_widget(attribute(formNewPay.contact, fieldName), {'attr': {'class': 'form-control type_form'}}) }}
                                                        {% endif %}
                                                    </div>
                                                </div>
                                                <div class="col-sm-3">
                                                    <div class="form-group">
                                                        {% set fieldName = 'area_code' ~ loop.index0 %}
                                                        {% if attribute(formNewPay.contact, fieldName) is defined %}
                                                            {% set label = 'hotels.labels.area_code' | trans %}
                                                            <label class="label-lef" for="">{{ label }}</label>
                                                            {{ form_widget(attribute(formNewPay.contact, fieldName), {'attr': {'class': 'form-control type_form'}}) }}
                                                        {% endif %}
                                                    </div>
                                                </div>
                                                <div class="col-sm-4">
                                                    <div class="form-group">
                                                        {% set fieldName = 'number' ~ loop.index0 %}
                                                        {% set label = 'hotels.labels.number' | trans %}
                                                        <label class="label-lef" for="">{{ label }}</label>
                                                        {{ form_widget(attribute(formNewPay.contact, fieldName), {'attr': {'class': 'form-control type_form'}}) }}
                                                    </div>
                                                </div>
                                                {% endfor %}

                                            </div>
                                            <div class="row">
                                                <div class="col-xs-12">
                                                    <p class="bg-success">{{ 'hotels.contact_msg' | trans }}.</p>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-sm-5">
                                                    <div class="form-group">
                                                        <label class="label-lef" for="">Email:</label>
                                                        {{ form_widget(formNewPay.contact.email, {'attr': {'class': 'form-control inputError email_form'}}) }}

                                                    </div>
                                                </div>
                                                <div class="col-sm-7">
                                                    <div class="form-group">
                                                        <label class="label-lef" for="">Confirme su Email:</label>
                                                        <input type="email" id="form_contact_info_email-1" name="form[contact_info][email-1]" required="required" placeholder="Confirme su email" class="form-control email_confirm_form" autocomplete="off">

                                                    </div>
                                                </div>
                                                <div class="col-md-6 top-buffer hide" id="errorEmail">
                                                    <div class="alert alert-danger" role="alert" style="background: #ea0000; border-color: #ea0000; color:#fff;">
                                                        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                                                        <span class="sr-only">Error:</span>
                                                        Las direcciones de email no coinciden.
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-xs-12">
                                                    <p class="bg-success">Enviaremos la confirmación de tu reserva a esta dirección.</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {% if formNewPay.vouchers is defined %}
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h4 class="panel-title">{{ 'hotels.vouchers' | trans }}:</h4>
                                    </div>
                                    <div id="collapse" class="panel-collapse">
                                        <div class="panel-body">
                                            <div class="row">
                                                {% for voucher in formChoice.vouchers %}
                                                <div class="col-sm-4">
                                                    <div class="form-group">
                                                        {% set fieldName = loop.index0 %}
                                                        <label class="label-lef" for="">{{ 'hotels.vouchers' | trans }}:</label>
                                                        {{ form_widget(attribute(formNewPay.vouchers, fieldName), {'attr': {'class': 'form-control input-width'}}) }}
                                                    </div>
                                                </div>
                                                {% endfor %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {% endif %}

                                {% if formNewPay.additionalData is defined %}
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h4 class="panel-title">{{ 'hotels.additional_data' | trans }}</h4>
                                    </div>
                                    <div id="collapse" class="panel-collapse">
                                        <div class="panel-body">
                                            <div class="row">
                                                {% if formNewPay.additionalData.comment is defined %}
                                                <div class="col-sm-12">
                                                    <div class="form-group">
                                                        {% set label = 'hotels.labels.comment' | trans %}
                                                        <label for="">{{ label }}</label>
                                                        {{ form_widget(formNewPay.additionalData.comment, {'attr': {'class': 'form-control'}}) }}
                                                    </div>
                                                </div>
                                                {% endif %}
                                            </div>
                                            <div class="row">
                                                <div class="col-xs-12">
                                                    <p class="bg-success">{{ 'hotels.additional_msg' | trans }}.</p>
                                                </div>
                                            </div>
                                            <div class="row">
                                                {% if formNewPay.additionalData.subscribe_newsletter is defined %}
                                                <div class="col-sm-12">
                                                    <div class="form-group">
                                                        {% set label = 'hotels.labels.subscribe_newsletter' | trans %}
                                                        <label class="label-lef"  for="">{{ label }}</label>
                                                        {{ form_widget(formNewPay.additionalData.subscribe_newsletter, {'attr': {'class': 'form-control input-width'}}) }}
                                                    </div>
                                                </div>
                                                {% endif %}
                                            </div>
                                            <div class="row">
                                                {% if formNewPay.additionalData.travel_assistance is defined %}
                                                    <div class="col-sm-12">
                                                        <div class="form-group">
                                                            {% set label = 'hotels.labels.travel_assistance' | trans %}
                                                            <label class="label-lef" for="">{{ label }}</label>
                                                            {{ form_widget(formNewPay.additionalData.travel_assistance, {'attr': {'class': 'form-control input-width'}}) }}
                                                        </div>
                                                    </div>
                                                {% endif %}
                                            </div>
                                            {#{{ form_widget(formNewPay.additionalData.comment, {'attr': {'style': 'display:none;'}}) }}#}
                                            {{ form_widget(formNewPay.additionalData.should_use_nightly_prices, {'attr': {'style': 'display:none;', 'checked': 'checked'}}) }}
                                        </div>
                                    </div>
                                </div>
                                {% endif %}
                            </div>
                            <div class="buttonPayment center">
                                <button>{{ 'hotels.buy' | trans }}</button>
                            </div>
                            <input type="hidden" name="roompack_choice" value="{{ roompack_choice }}">
                        {{ form_end(formNewPay) }}
                    </div>
                </div>
                <!-- END RESERVATION HOTEL -->
                <!-- GO SIDE BAR DESKTOP-->
                <div class="col-xs-12 col-sm-3 col-sm-pull-9">
                    <div id="sidebar">
                        <div id="infoReserva" class="hidden-xs">
                            <h5 class="titleReserva">{{ 'hotels.your_accommodation' | trans }}:</h5>
                            <p style="float: left; margin-right: 10px;"><span>{{ hotelBrief.name }}</span></p>
                            <ul>
                                {% for i in 1..5 %}
                                    {% if i <= hotelBrief.stars %}
                                        <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                    {% endif %}
                                {% endfor %}
                            </ul>
                            <br style="clear: both" />
                            <img src="{{ hotelBrief.img }}/95x95" alt="">
                            <br style="clear: both" />
                            <p>{{ hotelBrief.address }}</p>
                            {{ travellers|raw }}
                            <div class="datesPayment">
                                <h5>{{ 'hotels.paying' | trans }}:</h5>
                                <p>{{ reservationDays }} {{ 'hotels.night' | trans }}{% if reservationDays > 1 %}s{% endif %} - {{ roomNumbers }} {% if roomNumbers == 1 %}{{ 'index.search.hotel.room' | trans }}{% else %} {{ 'index.search.hotel.rooms' | trans }}{% endif %}<br/></p>
                                <p>
                                    <span>
                                        {% for room in rooms %}
                                            {% set temp = attribute(rooms, loop.index0) %}
                                            * {{ temp.name }}<br/>
                                        {% endfor %}
                                    </span>
                                </p>
                                <h3>{{ hotelBrief.room_cancellation }}</h3>
                                <b><span id="cuoteDesktop"  style="color: #fff"></span></b>

                                {% set discounts = price_detail.discounts %}
                                {% set taxesFees = price_detail.taxes + price_detail.fee %}
                                {% set total =  price_detail.subtotal + taxesFees - discounts %}

                                <p>{{ 'hotels.room_per_night' | trans }}: {{ symbol }} {{ price_detail.nightly_subtotal | currency_convert_format(targetCurrency, decimal,false)| number_format(2, ',', '.') }}</p>

                                <p>{{ 'hotels.taxes_and_rates' | trans }}: {{ symbol }} {{ taxesFees | currency_convert_format(targetCurrency, decimal,false)| number_format(2, ',', '.')}}</p>
                                {% if price_detail.discounts > 0 %}
                                    <p>{{ 'index.discounts' | trans }}: {{ symbol }} {{ price_detail.discounts |  currency_convert_format(targetCurrency, decimal,false)| number_format(2, ',', '.') }}</p>
                                {% endif %}

                                <p><span>{{ 'hotels.total_price' | trans }}: {{ symbol }} {{ total | currency_convert_format(targetCurrency, decimal,false)| number_format(2, ',', '.') }}</span></p>

                                <aside>{{ 'hotels.paying_msg' | trans |replace({'%currency%': symbol}) }}.</aside>
                            </div>
                        </div>
