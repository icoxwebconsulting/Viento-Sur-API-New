{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'admin.edit_password' | trans }}{% endblock %}

{% block top_content %}
    {% embed ':_partial:breadcrumb.html.twig' %}
        {% block breadcrumb %}{{ 'admin.edit_password' | trans }}{% endblock %}
    {% endembed %}
{% endblock %}

{% block content %}
<div class="col-md-6">
    <div class="card">
        <div class="card-header">
            <strong>{{ 'admin.password' | trans }}</strong>
        </div>
        <form method="POST" action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} class="form-horizontal">
            <div class="card-block">
                <div class="form-group row">
                    <label class="col-md-4 form-control-label" for="current-password">{{ 'admin.current_password' | trans }}</label>
                    <div class="col-md-8">
                        {{ form_widget(form.current_password, {'attr': { 'class': 'form-control'}}) }}
                        {{ form_errors(form.current_password) }}
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-4 form-control-label" for="new-password">{{ 'admin.new_password' | trans }}</label>
                    <div class="col-md-8">
                        {{ form_widget(form.new.first, { 'attr': { 'class': 'form-control'}}) }}
                        {{ form_errors(form.new.first) }}
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-4 form-control-label" for="repeat-new-password">{{ 'admin.repeat_new_password' | trans }}</label>
                    <div class="col-md-8">
                        {{ form_widget(form.new.second, { 'attr': { 'class': 'form-control'}}) }}
                        {{ form_errors(form.new.second) }}
                    </div>
                </div>
                {{ form_rest(form) }}
            </div>
            <div class="card-footer">
                <a href="{{ path('fos_user_profile_show') }}" class="btn btn-sm btn-success"><i class="fa fa-mail-reply"></i> {{ 'admin.back' | trans }}</a>
                <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-dot-circle-o"></i> {{ 'admin.change' | trans }}</button>
            </div>
        </form>
    </div>

{% endblock %}